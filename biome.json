{
  "$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "useLiteralKeys": "off",
        "useArrowFunction": "off"
      },
      "style": {
        "noVar": "off"
      },
      "suspicious": {
        "noEmptyInterface": "off"
      }
    }
  }
}
